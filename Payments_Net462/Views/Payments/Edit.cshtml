			</div>
		</div>
	</div>
}
<div class="row">
	<div class="col-sm-2">
		@Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-info" })
	</div>
	<div class="col-sm-2">
		@Html.ActionLink("Delete", "Delete", new { id = Model.ID }, htmlAttributes: new { @class = "btn btn-danger" })
	</div>
</div>

@section Scripts {
