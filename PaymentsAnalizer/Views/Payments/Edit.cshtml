@model PaymentsAnalizer.Models.Payment

@{
	ViewData["Title"] = "Edit";
}
<br />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ID" />
			<div class="form-group">
				<label asp-for="PayDate" class="control-label"></label>
				<input asp-for="PayDate" class="form-control" type="datetime-local" id="datetimepicker" />
				<span asp-validation-for="PayDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Amount" class="control-label"></label>
				<input asp-for="Amount" class="form-control" />
				<span asp-validation-for="Amount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CatogoryId" class="control-label"></label>
				<select asp-for="CatogoryId" class="form-control" asp-items="ViewBag.CatogoryId"></select>
				<span asp-validation-for="CatogoryId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<hr />
<div>
	<form asp-action="Index">
		<button type="submit" value="Index" class="btn btn-default">
			<i class="glyphicon glyphicon-backward"></i> Back to list
		</button>
	</form>
</div>
<hr />
<div>
	<form asp-action="Delete">
		<input type="hidden" asp-for="ID" />
		<button type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Wish to DELETE ?');">
			<i class="glyphicon glyphicon-trash"></i> Delete!
		</button>
	</form>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}